<Window x:Class="tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tester"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="x" Background="AliceBlue">
    
        <Image x:Name="img"/>

        <Slider x:Name="beep" Minimum="1" Maximum="255" Value="255" Canvas.Left="347" Canvas.Top="154" HorizontalAlignment="Left" VerticalAlignment="Center" Width="229" ValueChanged="beep_ValueChanged"></Slider>

    </Canvas>
</Window>
