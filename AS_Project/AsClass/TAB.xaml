<UserControl x:Class="AS.TAB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AS"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Button x:Name="ButtonTAB" Content="File" FontSize="30" Background="Beige" Click="ButtonTAB_Click"/>
        <Popup x:Name="Popup"  PlacementTarget="{Binding ElementName=ButtonTAB}" StaysOpen="False" IsOpen="False" />
        <Border BorderBrush="Black" BorderThickness="2" Background="LightBlue">
            <ListView x:Name="ListviewButton" />
        </Border>

    </Grid>
</UserControl>
