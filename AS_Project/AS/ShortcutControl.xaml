<UserControl x:Class="AS.ShortcutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <ToggleButton x:Name="TogglePopupButton" Height="30" Width="150" HorizontalAlignment="Left"  Background="Gray">
            <StackPanel>

                <Label x:Name="TabContent" Content="Shortcuts"   />

                <Popup Name="myPopup" IsOpen="{Binding IsChecked, ElementName=TogglePopupButton}">
                    <Border BorderThickness="1">
                        <StackPanel x:Name="StackPanelButtons" Orientation="Vertical" >
                            <Label Content="E: Eraser"/>
                            <Label Content="B: Brush"/>
                            <Label Content="I: Eydrop" />
                            <Label Content="Leertaste: Start/Stop"/>
                            <Label Content="Pfeiltasten: next/previous Frame"/>


                        </StackPanel>
                    </Border>
                </Popup>
            </StackPanel>
        </ToggleButton>




    </Grid>
</UserControl>
